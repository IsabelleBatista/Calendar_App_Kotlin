<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/purple_500</item>
        <item name="backgroundColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">?attr/colorPrimaryVariant</item>
        <item name="materialCalendarStyle">?attr/colorPrimaryVariant</item>

    </style>
</resources>